<div class="contact">
    <div class="container">
        <div class="form">
            <div class="max-w-screen-md mx-auto">
                <h3 class="page-title mb-[30px] leading-normal font-extrabold tracking-tight text-gray-900">
                    Get In
                    <span class="text-indigo-600">Touch</span>
                </h3>
                <form class="w-full">
                    <div class="form-item">
                        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                            <label>First Name</label>
                            <input name="firstname" class="firstname" type="text">
                        </div>
                        <div class="w-full md:w-1/2 px-3">
                            <label>Last Name</label>
                            <input name="lastname" class="lastname" type="text">
                        </div>
                    </div>
                    <div class="form-item">
                        <div class="w-full px-3">
                            <label>Phone Number</label>
                            <input name="phone" class="phone" type="number">
                        </div>
                    </div>
                    <div class="form-item">
                        <div class="w-full px-3">
                            <label>Email Address</label>
                            <input name="email" class="email" type="email">
                        </div>
                    </div>
                    <div class="form-item">
                        <div class="w-full px-3">
                            <label>Your Message</label>
                            <textarea rows="10"></textarea>
                        </div>
                        <div class="flex justify-between w-full px-3">
                            <button class="submit btn" type="submit">
                                Send Message
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
